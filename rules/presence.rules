
rule "Anybody at home"
when
	Item persPetroMobile changed
then
	
	if (
		persPetroMobile.state == ON
	) {
		logWarn("persistance", "Somebody at home")
		persAnybody.sendCommand(ON);
		// heatingTempComfort.sendCommand(20);
	} else {
		logWarn("persistance", "Nobody at home")
		persAnybody.sendCommand(OFF);
		// heatingTempComfort.sendCommand(4.5);
	}
end

