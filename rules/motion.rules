
// Motion detect in KG
rule "KG Motion detect haupt"
when
    Item treppe_motion_occupancy changed
then
    var state = treppe_motion_occupancy.state
    if (state == OFF) {
        sendCommand(g_light_treppe, OFF)
    }
    if (state == ON && g_light_treppe.state == OFF) {
        sendCommand(g_dim_treppe, 30)
    }
end

