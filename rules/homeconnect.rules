// Notify that dryer is finished
rule "Siemens dryer state finished"
    when Item dryer_operation_state changed from 'Run' to 'Finished'
then
    logInfo("dryer", "Siemens dryer state finished")

    sendBroadcastNotification("Dryer finished")

    val telegramAction = getActions("telegram","telegram:telegramBot:PWS_Notification")
    telegramAction.sendTelegram("Dryer finished")
end
