// Door contact in treppe UP
rule "Treppe door UP"
when
    Item treppe_door_sensor_contact changed from CLOSED to OPEN
then
    treppe_motion_occupancy.postUpdate(ON)
end

// Door contact for Main door
rule "Main door"
when
    Item eg_main_door_contact changed from CLOSED to OPEN
then
    if (astro_sun_up_5.state == OFF) {
        if (
            g_light_eg_ku.state == OFF
            && g_light_eg_flur.state == OFF
            && g_light_eg_bz.state == OFF
        ) {
            if (astro_sun_up_5.state == OFF) {
                sendCommand(g_light_eg_auto, ON)
                sendCommand(g_dim_eg_auto, 30)
            }
        }
    }
end
